.header-menu-left-nav {
  z-index: 5;
  top: 50px;
  left: 0;
  position: absolute;
  width: 15rem;
  background: rgb(90, 90, 90);
  flex-direction: column;
}

@media (min-width: 700px) {
  .header-menu-left-nav {
    background-color: rgb(90, 90, 90);
    color: black;
  }
  .navbar-dark .navbar-nav .active > .nav-link {
    color: black;
  }
  .navbar-nav :hover {
    opacity: 0.8;
    background-color: rgb(180, 180, 180);
  }
  .navbar-expand-lg .navbar-nav {
    flex-direction: column;
    width: 100%;
  }
}

@media (min-width: 992px) {
  .navbar-expand-lg {
    justify-content: space-around;
  }

}

@media (min-width: 992px) {
  .navbar-expand-lg .navbar-collapse {
    display: none !important;
  }
}

.main-container {
  width: 100%;
}

.left-container {
  display: none;
}

.left-container .header-menu-left-nav {
  width: 100%;
  position: relative;
  top: 0;
} 

.center-container {
  width: 100%;
}

@media (min-width: 992px) {
  .left-container {
    display: block;
    width: 25%;
    max-width: 20rem;
  }

  .navbar-nav {
    padding-left: 1rem;
    margin-bottom: 0;
  }

  .center-container {
    width: 90%;
  }
}
