$grey-1 = #343a40;
$header-background = #3e403f;
$left-side-backrground = #3e403f;

body {
  // color: white;
}

.bg-dark {
  background: $header-background !important;
}

.header-menu-left-nav {
  z-index: 5;
  top: 50px;
  left: 0;
  position: absolute;
  width: 15rem;
  background: $left-side-backrground;
  flex-direction: column;
}

@media (min-width: 700px) {
  .header-menu-left-nav {
    background: $left-side-backrground;
    color: white;
  }
  .header-menu-left-nav a {
    color: white; 
  }
  .navbar-dark .navbar-nav .active > .nav-link {
    color: white;
  }
  .navbar-nav :hover {
    background: #303333;
  }
  .navbar-expand-lg .navbar-nav {
    flex-direction: column;
    width: 100%;
  }
}

@media (min-width: 992px) {
  .navbar-expand-lg {
    justify-content: space-between;
  }

}

@media (min-width: 992px) {
  .navbar-expand-lg .navbar-collapse {
    display: none !important;
  }
}

.main-container {
  width: 100%;
}

.left-container {
  display: none;
}

.left-container .header-menu-left-nav {
  width: 100%;
  position: relative;
  top: 0;
  height: 100vh;
} 

.center-container {
  width: 100%;
}


  .navbar-nav {
    padding-left: 0;
    margin-bottom: 0;
  }

  .navbar-nav li {
    padding-left: 1rem;
  }

  .navbar-nav span {
    padding: 1rem;
  }

@media (min-width: 992px) {
  .left-container {
    display: block;
    width: 25%;
    max-width: 20rem;
  }


  .center-container {
    width: 90%;
  }
}

.icon-color {
  color: white;
}

